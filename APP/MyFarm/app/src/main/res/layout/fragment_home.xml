<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitleConn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="连接服务器"
            android:textColor="@android:color/black"
            android:textSize="20dp">

        </TextView>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inIP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="输入服务器IP"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inPort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="输入服务器端口"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="订阅号"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnConnSrv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="连接" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnLostSrv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="断开" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="订阅" />

            <Button
                android:id="@+id/btnTh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="阈值" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitlePrara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="数据显示"
            android:textColor="@android:color/black"
            android:textSize="20dp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTemp"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="温度"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="16dp">

            </TextView>

            <EditText
                android:id="@+id/edTemp"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/edtext_bg"
                android:ems="10"
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <ProgressBar
                android:id="@+id/progressBarTemp"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="184dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvWet"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="湿度"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="16dp">

            </TextView>

            <EditText
                android:id="@+id/edWet"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/edtext_bg"
                android:ems="10"
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <ProgressBar
                android:id="@+id/progressBarWet"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="184dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLight"
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="光强"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="16dp">

            </TextView>

            <EditText
                android:id="@+id/edLight"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/edtext_bg"
                android:ems="10"
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <ProgressBar
                android:id="@+id/progressBarLight"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="184dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPress"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="气压"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="16dp">

            </TextView>

            <EditText
                android:id="@+id/edPress"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/edtext_bg"
                android:ems="10"
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <ProgressBar
                android:id="@+id/progressBarPress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="184dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAlt"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="海拔"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="16dp">

            </TextView>

            <EditText
                android:id="@+id/edAlt"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/edtext_bg"
                android:ems="10"
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <ProgressBar
                android:id="@+id/progressBarAlt"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="184dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSoil"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="土壤"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="16dp">

            </TextView>

            <EditText
                android:id="@+id/edSoil"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/edtext_bg"
                android:ems="10"
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <ProgressBar
                android:id="@+id/progressBarSoil"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="184dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvRain"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="雨量"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="16dp">

            </TextView>

            <EditText
                android:id="@+id/edRain"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/edtext_bg"
                android:ems="10"
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <ProgressBar
                android:id="@+id/progressBarRain"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="184dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>